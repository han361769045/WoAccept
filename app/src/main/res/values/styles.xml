<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:textColorPrimary">@color/black</item>-->
        <!--<item name="android:textColor">@color/textColor</item>-->
    </style>

    <style name="CustomProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="PaymentCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/payment_checkbox</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">64dp</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="payment_text_left" parent="@style/wrap_wrap">
        <item name="android:textColor">@color/app_black_text</item>
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="payment_text_right" parent="@style/wrap_wrap">
        <item name="android:textColor">@color/app_black_text</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--tabLayout的字体style-->
    <style name="tab_text_style" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@color/app_black_text</item>
    </style>

    <style name="login_input_layout">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>


    <style name="id_card_left">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorEnterInformation</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="id_card_right">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/enter_information_shape</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:textColor">@color/colorEnterInformation</item>-->
    </style>

    <style name="draw_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        - <!--  activity 不变暗 -->
        <item name="android:windowIsFloating">true</item>
        - <!--  是否浮现在activity之上-->
        <item name="android:windowNoTitle">true</item>
        - <!--  无标题 -->
        <item name="android:windowIsTranslucent">false</item>
        - <!--  半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
