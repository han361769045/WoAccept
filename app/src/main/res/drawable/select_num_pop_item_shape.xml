<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="@dimen/_1dp" android:color="@color/line_color"/>
            <padding android:bottom="@dimen/_5dp" android:left="@dimen/_5dp" android:right="@dimen/_5dp" android:top="@dimen/_5dp"/>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3dp"/>
            <solid android:color="@color/colorPrimary"/>
            <stroke android:width="@dimen/_1dp" android:color="@color/line_color"/>
            <padding android:bottom="@dimen/_5dp" android:left="@dimen/_5dp" android:right="@dimen/_5dp" android:top="@dimen/_5dp"/>
        </shape>
    </item>
</selector>